---
import FormattedDate from '../components/FormattedDate.astro';

const { post } = Astro.props
const base = import.meta.env.BASE_URL;
---
<li>
    <a class="bg-glass glass-hover" href=`${base}/blog/${post.slug}/`>
        <img src=`${base}/${post.data.heroImage}` alt="" />
        <div class="body">
            <p class="date"><FormattedDate date={post.data.pubDate} /></p>
            <h4 class="title">{post.data.title}</h4>
            <p class="description">{post.data.description}</p>
            <p class="author">Por {post.data.author}</p>
        </div>
    </a>
</li>

<style>
    li * {
        text-decoration: none;
    }
    li > a {
        color: inherit;
        display: flex;
        flex-flow: row nowrap;
        align-items: center;
        box-sizing: border-box;
        gap: 1.5rem;
        padding: 1rem;
        border-radius: var(--radius);
        overflow: hidden;
    }
    img {
        width: 16rem;
        height: fit-content;
        aspect-ratio: 16/10;
        object-fit: cover;
    }
    .body {
        display: flex;
        flex-flow: column nowrap;
        gap: 0.5rem;
    }
    .body > * {
        margin: 0;
        padding: 0;
    }
    .title {
        color: var(--white);
        line-height: 1;
        font-size: 1.4rem
    }
    .date,
    .author {
        color: rgb(var(--gray));
        font-size: 0.9rem;
    }
    @media (max-width: 720px) {
        li > a {
            flex-direction: column;
        }
        img {
            width: 100%;
            aspect-ratio: 16/9;
        }
    }
</style>
